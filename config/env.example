# --- REQUIRED ---
PORT=3000
DATABASE_URL=postgresql://gateway:gateway@db:5432/gateway
REDIS_URL=redis://redis:6379
TOKEN_HMAC_SECRET=change-me
SECRETS_BACKEND=env
HTTP_TIMEOUT_MS=6000
DEFAULT_TIMEZONE=America/Toronto
# 32-byte base64 for KEK. Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
KEK_BASE64=REPLACE_WITH_BASE64_32B

# --- OPTIONAL / FEATURE FLAGS ---
FF_CACHE=on
FF_RETRY=on
FF_BREAKERS=on
FF_ASYNC=on
FF_POLICY=on
UPSTREAM_MODE=mock   # live | mock
FF_CHAOS=off         # dev-only fault injection

# --- DEV ONLY EXAMPLE SECRETS (env backend) ---
serpapi.api_key=dev-serpapi
openai.api_key=dev-openai
gmail_send.api_key=dev-gmail
